<?r
	f = Financier::FormFormatter.new(:object => attributes[:customer])
?><form class="basic editor" method="post" action="#" >
	#{f.hidden :field => :rev if f.object.id}
	
	<fieldset><legend>Customer Details</legend>
		<dl>
			#{f.input :field => :name}
		</dl>
	</fieldset>
	
	<fieldset><legend>Addresses</legend>
	</fieldset>
	
	<fieldset class="footer">
		<fieldset class="footer">
			#{f.submit}
		</fieldset>
	</fieldset>
</form>
